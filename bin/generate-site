#!/usr/bin/env bash

function replacer {
  while read line
  do
    if [ "${line}*" = "${1}*" ]
    then
      echo "${2}"
    else
      echo ${line}
    fi
  done
}

url="https:\/\/github.com\/Gozala\/wisp\/blob\/master\/"
interact=`cat interact.html`
content=`cat README.md | cat README.md | sed "s/(.\//(${url}/g" | ./node_modules/.bin/commonmark | replacer '<!-- interactive demo -->' "${interact}"`
cat template.html | replacer '<!-- content -->' "${content}"
